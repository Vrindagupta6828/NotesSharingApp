<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        android:id="@+id/info_layout"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term_paper_review_scheduled"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/notificationTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimary"
        android:autoLink="web"
        android:layout_below="@id/notificationTitle"
        android:layout_margin="5dp"
        android:text="@string/hello_everyone_we_have_scheduled_term_paper_review_on_monday_morining_at_9_00am_be_ready_everyone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:text="@string/saikiran_kopparthi"
        android:textStyle="italic"
        android:id="@+id/studentName"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_below="@id/notificationDescription"
        app:drawableStartCompat="@drawable/ic_baseline_send_24"
        app:drawableTint="@color/colorPrimary" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/info_layout" />

</RelativeLayout>